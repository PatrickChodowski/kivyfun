#:kivy 2.0.0
#:import Window kivy.core.window.Window
#:import Clipboard kivy.core.clipboard.Clipboard
#:import Factory kivy.factory.Factory

<DownloaderLayout>:
    orientation: 'vertical'
    youtube_link:youtube_link
    BoxLayout:
        size_hint_y: None
        TextInput:
            id: youtube_link
            hint_text: 'Enter url here'
            size_hint_y: None
            multiline: False

        Button:
            id: download_button
            on_press: root.start_download()
            size_hint_y: None
            size_hint_x: 0.1
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/down-arrow.png'

        Button:
            id: syncronize_up_button
            text: "Push"
            on_press: root.syncronize_up()
            size_hint_y: None
            size_hint_x: 0.1

        Button:
            id: syncronize_down_button
            text: "Pull"
            on_press: root.syncronize_down()
            size_hint_y: None
            size_hint_x: 0.1

    RV:
        id: rv

<DownloadStatusBar>:
    orientation: 'horizontal'
    padding: 5
    bcolor: .6, .6, .6, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.url if root.title == '' else root.title
            text_size: self.width, None
            height: self.texture_size[1]
        Label:
            text: '{:5.2f}% {} {} {}'.format(root.percent, root.file_size, root.speed, root.ETA)
            text_size: self.width, None
            height: self.texture_size[1]
        ProgressBar:
            value: root.percent
    Image:
        x: self.parent.x
        y: self.parent.y
        size: self.parent.size
        stretch: True
        source: root.status_icon
        size_hint_x: .1


<RV>:
    viewclass: 'DownloadStatusBar'
    RecycleBoxLayout:
        id: rbl
        default_size: None, dp(60)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<RootLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        DownloaderLayout:
            id: main_layout
            bcolor: .75, .75, .75, .75
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size