<MyWidget>
    name:name
    country:country
    fav_color:fav_color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
            Label:
                text: "Country"
            TextInput:
                id: country
                multiline: False
            Label:
                text: "Favourite Color"
            TextInput:
                id: fav_color
                multiline: False
        Button:
            text: "Submit"
            font_size: 56
            on_press: root.press_submit()
